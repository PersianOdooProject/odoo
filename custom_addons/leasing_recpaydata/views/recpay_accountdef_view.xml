<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="leasing_recpaydata.recpay_accountdef_list">
            <field name="name">Recpay Accountdef list</field>
            <field name="model">leasing_recpaydata.recpay_accountdef</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id" string="کد داخلی"/>
                    <field name="account_no" string="شماره حساب" width="200pxl"/>
                    <field name="account_name" string="نام حساب" width="300pxl"/>
                    <field name="account_sheba" string="شماره شبا" width="300pxl"/>
                    <field name="bankbranch_id" string="شعبه بانک" width="300pxl"/>
                    <field name="branchbank_name1" string="نام بانک" width="300pxl"/>
                    <field name="branchcity_name1" string="نام شهر" width="300pxl"/>
                    <field name="ssledger_id" string="حساب تفصیل" width="300pxl"/>
                    <field name="create_uid" string="کاربر ایجاد کننده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت ایجاد" width="100pxl"/>
                    <field name="write_uid" string="کاربر تغییر دهنده" width="100pxl"/>
                    <field name="write_date" string="تاریخ و ساعت تغییر" width="100pxl"/>
                </list>
            </field>
        </record>

        <record id="recpaydata_accountdef_form_view" model="ir.ui.view">
            <field name="name">Recpaydata Accountdef Form</field>
            <field name="model">leasing_recpaydata.recpay_accountdef</field>
            <field name="arch" type="xml">
                <form>
                    <sheet style="max-width : 50%;">
                        <group>
                            <field name="account_no" string="شماره حساب"/>
                            <field name="account_name" string="نام حساب"/>
                            <field name="account_sheba" string="شماره شبا"/>
                            <field name="bankbranch_id" string="شعبه بانک"/>
                            <field name="branchbank_name1" string="نام بانک"/>
                            <field name="branchcity_name1" string="نام شهر"/>
                            <field name="ssledger_id" string="حساب تفصیل"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="leasing_recpaydata.recpay_accountdef_action_window">
            <field name="name">معرفی حساب بانکی</field>
            <field name="res_model">leasing_recpaydata.recpay_accountdef</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>

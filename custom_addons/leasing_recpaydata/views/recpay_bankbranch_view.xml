<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="leasing_recpaydata.recpay_bankbranch_list">
            <field name="name">Recpay Bankbranch list</field>
            <field name="model">leasing_recpaydata.recpay_bankbranch</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id" string="کد داخلی"/>
                    <field name="branch_code" width="150pxl"/>
                    <field name="branch_name" width="300pxl"/>
                    <field name="bank_id" width="300pxl"/>
                    <field name="city_id" width="300pxl"/>
                    <field name="create_uid" string="کاربر ایجاد کننده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت ایجاد" width="100pxl"/>
                    <field name="write_uid" string="کاربر تغییر دهنده" width="100pxl"/>
                    <field name="write_date" string="تاریخ و ساعت تغییر" width="100pxl"/>
                </list>
            </field>
        </record>

        <record id="recpaydata_bankbranch_form_view" model="ir.ui.view">
            <field name="name">Recpaydata bankbranch Form</field>
            <field name="model">leasing_recpaydata.recpay_bankbranch</field>
            <field name="arch" type="xml">
                <form>
                    <sheet style="max-width : 50%;">
                        <group>
                            <field name="branch_code" string="کد شعبه"/>
                            <field name="branch_name" string="نام شعبه"/>
                            <field name="bank_id" string="بانک"/>
                            <field name="city_id" string="شهر"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="leasing_recpaydata.recpay_bankbranch_action_window">
            <field name="name">معرفی شعبه بانک</field>
            <field name="res_model">leasing_recpaydata.recpay_bankbranch</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="leasing_recpaydata.recpay_taghvimmalirecord_list">
            <field name="name">Recpay Taghvimmalirecord list</field>
            <field name="model">leasing_recpaydata.recpay_taghvimmalirecord</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id" string="کد داخلی"/>
                    <field name="taghvimmalicode_group1" string="گروه اطلاعات پایه تقویم مالی" width="300pxl"/>
                    <field name="taghvimmalicode_name1" string="شرح اطلاعات پایه تقویم مالی" width="400pxl"/>
                    <field name="taghvimmalirecord_date" string="تاریخ عملیات مالی" width="300pxl"/>
                    <field name="taghvimmalirecord_description" string="شرح عملیات مالی" width="500pxl"/>
                    <field name="taghvimmalirecord_amount" string="مبلغ" width="300pxl"/>
                    <field name="create_uid" string="کاربر ایجاد کننده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت ایجاد" width="100pxl"/>
                    <field name="write_uid" string="کاربر تغییر دهنده" width="100pxl"/>
                    <field name="write_date" string="تاریخ و ساعت تغییر" width="100pxl"/>
                </list>
            </field>
        </record>

        <record id="recpaydata_taghvimmalirecord_calendar_view" model="ir.ui.view">
            <field name="name">Recpaydata Taghvimmalirecord Calendar</field>
            <field name="model">leasing_recpaydata.recpay_taghvimmalirecord</field>
            <field name="arch" type="xml">
                <calendar string="تقویم مالی" create="0" mode="month" date_start="taghvimmalirecord_date"
                          event_limit="5" quick_create="0">
                    <field name="taghvimmalicode_group1" string="گروه اطلاعات پایه تقویم مالی"/>
                    <field name="taghvimmalicode_name1" string="شرح اطلاعات پایه تقویم مالی"/>
                    <field name="taghvimmalirecord_shortdesc" string="شرح کوتاه عملیات مالی"/>
                </calendar>
            </field>
        </record>

        <record id="recpaydata_taghvimmalirecord_form_view" model="ir.ui.view">
            <field name="name">Recpaydata Taghvimmalirecord Form</field>
            <field name="model">leasing_recpaydata.recpay_taghvimmalirecord</field>
            <field name="arch" type="xml">
                <form>
                    <sheet style="max-width : 50%;">
                        <group>
                            <field name="taghvimmalicode_id" string="اطلاعات پایه تقویم مالی"/>
                            <field name="taghvimmalicode_group1" string="گروه اطلاعات پایه تقویم مالی"/>
                            <field name="taghvimmalicode_name1" string="شرح اطلاعات پایه تقویم مالی"/>
                            <field name="taghvimmalirecord_date" string="تاریخ عملیات مالی"/>
                            <field name="taghvimmalirecord_shortdesc" string="شرح کوتاه عملیات مالی"/>
                            <field name="taghvimmalirecord_description" string="شرح عملیات مالی"/>
                            <field name="taghvimmalirecord_amount" string="مبلغ" digits="[20,0]"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="leasing_recpaydata.recpay_taghvimmalirecord_action_window">
            <field name="name">ثبت اطلاعات تقویم مال</field>
            <field name="res_model">leasing_recpaydata.recpay_taghvimmalirecord</field>
            <field name="view_mode">list,calendar,form</field>
        </record>

    </data>
</odoo>

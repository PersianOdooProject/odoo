<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="leasing_recpaydata.recpay_behalf_list">
            <field name="name">Recpay behalf list</field>
            <field name="model">leasing_recpaydata.recpay_behalf</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id" string="کد داخلی"/>
                    <field name="behalf_name" width="300pxl"/>
                    <field name="create_uid" string="کاربر ایجاد کننده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت ایجاد" width="100pxl"/>
                    <field name="write_uid" string="کاربر تغییر دهنده" width="100pxl"/>
                    <field name="write_date" string="تاریخ و ساعت تغییر" width="100pxl"/>
                </list>
            </field>
        </record>

        <record id="recpaydata_behalf_form_view" model="ir.ui.view">
            <field name="name">Recpaydata behalf Form</field>
            <field name="model">leasing_recpaydata.recpay_behalf</field>
            <field name="arch" type="xml">
                <form>
                    <sheet style="max-width : 50%;">
                        <group>
                            <field name="behalf_name" string="شرح بابت"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="leasing_recpaydata.recpay_behalf_action_window">
            <field name="name">معرفی بابت</field>
            <field name="res_model">leasing_recpaydata.recpay_behalf</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>

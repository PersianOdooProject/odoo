<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="leasing_recpaydata.recpay_funcgroup_list">
            <field name="name">Recpay Funcgroup list</field>
            <field name="model">leasing_recpaydata.recpay_funcgroup</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id" string="کد داخلی گروه فعالیت مالی" width="300pxl"/>
                    <field name="funcgroup_code" string="کد گروه فعالیت مالی" width="300pxl"/>
                    <field name="funcgroup_name" string="نام گروه فعالیت مالی" width="300pxl"/>
                    <field name="create_uid" string="کاربر ایجاد کننده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت ایجاد" width="100pxl"/>
                    <field name="write_uid" string="کاربر تغییر دهنده" width="100pxl"/>
                    <field name="write_date" string="تاریخ و ساعت تغییر" width="100pxl"/>
                </list>
            </field>
        </record>

        <record id="recpaydata_funcgroup_form_view" model="ir.ui.view">
            <field name="name">Recpaydata Funcgroup Form</field>
            <field name="model">leasing_recpaydata.recpay_funcgroup</field>
            <field name="arch" type="xml">
                <form>
                    <sheet style="max-width : 100%;">
                        <group>
                            <field name="funcgroup_code" string="کد گروه فعالیت مالی"/>
                            <field name="funcgroup_name" string="نام گروه فعالیت مالی"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="leasing_recpaydata.recpay_funcgroup_action_window">
            <field name="name">گروه فعالیت مالی</field>
            <field name="res_model">leasing_recpaydata.recpay_funcgroup</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>

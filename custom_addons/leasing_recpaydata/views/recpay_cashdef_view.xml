<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="leasing_recpaydata.recpay_cashdef_list">
            <field name="name">Recpay Cashdef list</field>
            <field name="model">leasing_recpaydata.recpay_cashdef</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id" string="کد داخلی"/>
                    <field name="cash_name" string = "نام صندوق/تنخواه" width="300pxl"/>
                    <field name="ssledger_id" string = "حساب تفصیل" width="300pxl"/>
                    <field name="create_uid" string="کاربر ایجاد کننده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت ایجاد" width="100pxl"/>
                    <field name="write_uid" string="کاربر تغییر دهنده" width="100pxl"/>
                    <field name="write_date" string="تاریخ و ساعت تغییر" width="100pxl"/>
                </list>
            </field>
        </record>

        <record id="recpaydata_cashdef_form_view" model="ir.ui.view">
            <field name="name">Recpaydata Cashdef Form</field>
            <field name="model">leasing_recpaydata.recpay_cashdef</field>
            <field name="arch" type="xml">
                <form>
                    <sheet style="max-width : 50%;">
                        <group>
                            <field name="cash_name" string="نام صندوق/تنخواه"/>
                            <field name="ssledger_id" string="حساب تفصیل"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="leasing_recpaydata.recpay_cashdef_action_window">
            <field name="name">معرفی صندوق/تنخواه</field>
            <field name="res_model">leasing_recpaydata.recpay_cashdef</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>

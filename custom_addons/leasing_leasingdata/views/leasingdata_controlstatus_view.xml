<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="leasing_leasingdata.leasing_controlstatus_list">
            <field name="name">Leasingdata Controlstatus list</field>
            <field name="model">leasing_leasingdata.leasing_controlstatus</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id" string="کد داخلی مرحله پرونده" width="300pxl"/>
                    <field name="controlstatus_code" width="300pxl"/>
                    <field name="controlstatus_desc" width="300pxl"/>
                    <field name="create_uid" string="کاربر ایجاد کننده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت ایجاد" width="100pxl"/>
                    <field name="write_uid" string="کاربر تغییر دهنده" width="100pxl"/>
                    <field name="write_date" string="تاریخ و ساعت تغییر" width="100pxl"/>
                </list>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="leasing_leasingdata.leasing_controlstatus_action_window">
            <field name="name">مشاهده مراحل پرونده</field>
            <field name="res_model">leasing_leasingdata.leasing_controlstatus</field>
            <field name="view_mode">list</field>
        </record>

    </data>
</odoo>

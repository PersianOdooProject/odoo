<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="leasing_generaldata.generaldata_person_list">
            <field name="name">Generaldata Person list</field>
            <field name="model">leasing_generaldata.generaldata_person</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id" string="کد داخلی شخص" width="300pxl"/>
                    <field name="person_type" string="نوع شخص" width="200pxl"/>
                    <field name="person_jensiat" string="جنسیت" width="200pxl"/>
                    <field name="person_namefamil" string="نام و نام خانوادگی/نام شرکت" width="400pxl"/>
                    <field name="person_natcode" string="کد/شناسه ملی" width="200pxl"/>
                    <field name="person_namamel1" string="نام نماینده" width="300pxl"/>
                    <field name="person_namamel2" string="نام فرد کلیدی" width="300pxl"/>
                    <field name="person_mobile1" string="تلفن همراه 1" width="300pxl"/>
                    <field name="person_mobile2" string="تلفن همراه 2" width="300pxl"/>
                    <field name="person_economiccode" string="کد اقتصادی" width="300pxl"/>
                    <field name="ssledger_id" string="حساب تفصیل" width="300pxl"/>
                    <field name="person_sazman" string="سازمان" width="300pxl"/>
                    <field name="person_branch" string="نمایندگی" width="300pxl"/>
                    <field name="person_taminkala" string="تامین کننده کال" width="300pxl"/>
                    <field name="person_tolid" string="تولید کننده" width="300pxl"/>
                    <field name="person_taminetebar" string="تامین کننده اعتبار" width="300pxl"/>
                    <field name="person_paygiri" string="پیگیری کننده" width="300pxl"/>
                    <field name="create_uid" string="کاربر ایجاد کننده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت ایجاد" width="100pxl"/>
                    <field name="write_uid" string="کاربر تغییر دهنده" width="100pxl"/>
                    <field name="write_date" string="تاریخ و ساعت تغییر" width="100pxl"/>
                </list>
            </field>
        </record>

        <record id="leasing_generaldata.generaldata_person_kanban" model="ir.ui.view">
            <field name="name">Generaldata Person Kanban</field>
            <field name="model">leasing_generaldata.generaldata_person</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="id"/>
                    <field name="person_namefamil"/>
                    <field name="person_image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img class="o_kanban_image_inner_pic"
                                         t-att-src="kanban_image('leasing_generaldata.generaldata_person', 'person_image', record.id.raw_value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>
                                            نام و نام خانوادگی/نام شرکت :
                                            <field name="person_namefamil"/>
                                        </li>
                                        <li>
                                            کد/شناسه ملی :
                                            <field name="person_natcode"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="generaldata_person_form_view" model="ir.ui.view">
            <field name="name">Generaldata Person Form</field>
            <field name="model">leasing_generaldata.generaldata_person</field>
            <field name="arch" type="xml">
                <form>
                    <sheet style="max-width : 50%;">
                        <group>
                            <field name="person_name" string="نام شخص/شرکت 1"/>
                            <field name="person_famil" string="نام خانوادگی/شرکت 2"/>
                            <field name="person_type" string="نوع شخص"/>
                            <field name="person_jensiat" string="جنسیت"/>
                            <field name="person_natcode" string="کد/شناسه ملی"/>
                            <field name="person_namamel1" string="نام نماینده"/>
                            <field name="person_namamel2" string="نام فرد کلیدی"/>
                            <field name="person_mobile1" string="تلفن همراه 1"/>
                            <field name="person_mobile2" string="تلفن همراه 2"/>
                            <field name="person_economiccode" string="کد اقتصادی"/>
                            <field name="ssledger_id" string="حساب تفصیل"/>
                            <field name="person_branch" string="نمایندگی"/>
                            <field name="person_taminkala" string="تامین کننده کال"/>
                            <field name="person_tolid" string="تولید کننده"/>
                            <field name="person_taminetebar" string="تامین کننده اعتبار"/>
                            <field name="person_paygiri" string="پیگیری کننده" width="300pxl"/>
                            <field name="person_image" string="عکس شخص حقیقی/لوگوی شخص حقوقی" class="oe_avatar"
                                   widget="image"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="leasing_generaldata.generaldata_person_action_window">
            <field name="name">معرفی اشخاص حقیقی/حقوقی</field>
            <field name="res_model">leasing_generaldata.generaldata_person</field>
            <field name="view_mode">kanban,list,form</field>
        </record>

    </data>
</odoo>


<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="leasing_hesabdari.report_account_ssledger">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-xs-8">
                            <strong>
                                <span>گزارش حساب تفصیل</span>
                            </strong>
                            <table class="table table-condensed" style="border:solid 1px">
                                <thead>
                                    <tr>
                                        <th style="border:solid 1px" name="th_ssledger" class="text-center">
                                            <span>کد حساب تفصیل</span>
                                        </th>
                                        <th style="border:solid 1px" name="th_ssledgername" class="text-center">
                                            <span>عنوان حساب تفصیل</span>
                                        </th>
                                        <th style="border:solid 1px" name="th_ssledgertypename1" class="text-center">
                                            <span>عنوان نوع حساب تفصیل</span>
                                        </th>
                                    </tr>
                                </thead>
                                <br/>
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <t t-set="accountssledgeractiveid" t-value="o.env.context.get('active_id')"/>

                                        <t t-if="not accountssledgeractiveid">
                                        </t>

                                        <td style="border:solid 1px" class="text-center">
                                            <span t-field="o.ssledger"/>
                                        </td>
                                        <td style="border:solid 1px">
                                            <span t-field="o.ssledger_name"/>
                                        </td>
                                        <td style="border:solid 1px">
                                            <span t-field="o.ssledgertype_name1"/>
                                        </td>
                                    </tr>
                                </t>

                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="leasing_hesabdari.report_account_sledger">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-xs-8">
                            <strong>
                                <span>گزارش حساب کل و معین</span>
                            </strong>
                            <table class="table table-condensed" style="border:solid 1px">
                                <thead>
                                    <tr>
                                        <th style="border:solid 1px" name="th_kolmoin" class="text-center">
                                            <span>کد حساب کل و معین</span>
                                        </th>
                                        <th style="border:solid 1px" name="th_sledgername" class="text-center">
                                            <span>عنوان حساب معین</span>
                                        </th>
                                        <th style="border:solid 1px" name="th_ledgername1" class="text-center">
                                            <span>عنوان حساب کل</span>
                                        </th>
                                        <th style="border:solid 1px" name="th_acccontroltypedescription1" class="text-center">
                                            <span>شرح ماهیت حساب</span>
                                        </th>
                                    </tr>
                                </thead>
                                <br/>
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <t t-set="accountsledgeractiveid" t-value="o.env.context.get('active_id')"/>

                                        <t t-if="not accountsledgeractiveid">
                                        </t>

                                        <td style="border:solid 1px" class="text-center">
                                            <span t-field="o.kolmoin"/>
                                        </td>
                                        <td style="border:solid 1px">
                                            <span t-field="o.sledger_name"/>
                                        </td>
                                        <td style="border:solid 1px">
                                            <span t-field="o.ledger_name1"/>
                                        </td>
                                        <td style="border:solid 1px">
                                            <span t-field="o.acc_control_type_description1"/>
                                        </td>
                                    </tr>
                                </t>

                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>

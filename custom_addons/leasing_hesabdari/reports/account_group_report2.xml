<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="leasing_hesabdari.report_account_group">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-xs-8">
                            <strong>
                                <span>گزارش گروه حساب</span>
                            </strong>
                            <table class="table table-condensed" style="border:solid 1px">
                                <thead>
                                    <tr>
                                        <th style="border:solid 1px" name="th_accgroupcode" class="text-start">
                                            <span>کد گروه حساب</span>
                                        </th>
                                        <th style="border:solid 1px" name="th_accgroupname" class="text-start">
                                            <span>عنوان گروه حساب</span>
                                        </th>
                                        <th style="border:solid 1px" name="th_accgrouptypename1" class="text-start">
                                            <span>شرح نوع حساب</span>
                                        </th>
                                    </tr>
                                </thead>
                                <br/>

                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td style="border:solid 1px">
                                            <span t-field="o.acc_group_code"/>
                                        </td>
                                        <td style="border:solid 1px">
                                            <span t-field="o.acc_group_name"/>
                                        </td>
                                        <td style="border:solid 1px">
                                            <span t-field="o.acc_group_type_name1"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>

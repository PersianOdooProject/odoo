<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="leasing_hesabdari.report_account_bankacc">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-xs-8">
                            <strong>
                                <span>گزارش حساب های بانک مرکزی</span>
                            </strong>
                            <table class="table table-condensed" style="border:solid 1px">
                                <thead>
                                    <tr>
                                        <th style="border:solid 1px" name="th_bankacccode" class="text-center">
                                            <span>کد حساب</span>
                                        </th>
                                        <th style="border:solid 1px" name="th_bankaccname" class="text-center">
                                            <span>عنوان حساب</span>
                                        </th>
                                    </tr>
                                </thead>
                                <br/>
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <t t-set="accountbankaccactiveid" t-value="o.env.context.get('active_id')"/>

                                        <t t-if="not accountbankaccactiveid">
                                        </t>

                                        <td style="border:solid 1px" class="text-center">
                                            <span t-field="o.bankacc_code"/>
                                        </td>
                                        <td style="border:solid 1px" class="text-center">
                                            <span t-field="o.bankacc_name"/>
                                        </td>
                                    </tr>
                                </t>

                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>

<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="leasing_hesabdari.account_bankaccgroup_list">
            <field name="name">Bankacc Group list</field>
            <field name="model">leasing_hesabdari.account_bankaccgroup</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id" string="کد داخلی"/>
                    <field name="bankaccgroup_code" string="کد گروه حساب بانک مرکزی" width="100pxl"/>
                    <field name="bankaccgroup_name" string="عنوان گروه حساب بانک مرکزی" width="300pxl"/>
                    <field name="create_uid" string="کاربر ایجاد کننده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت ایجاد" width="100pxl"/>
                    <field name="create_uid" string="کاربر تغییر دهنده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت تغییر" width="100pxl"/>
                </list>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="leasing_hesabdari.account_bankaccgroup_action_window">
            <field name="name">گروه حساب بانک مرکزی</field>
            <field name="res_model">leasing_hesabdari.account_bankaccgroup</field>
            <field name="view_mode">list</field>
        </record>

        <record id="report_leasing_hesabdari_account_group" model="ir.actions.report">
            <field name="name">گزارش گروه حساب بانک مرکزی</field>
            <field name="model">leasing_hesabdari.account_bankaccgroup</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">leasing_hesabdari.report_account_bankaccgroup</field>
            <field name="report_file">leasing_hesabdari.report_account_bankaccgroup</field>
            <field name="binding_model_id" ref="model_leasing_hesabdari_account_bankaccgroup"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>

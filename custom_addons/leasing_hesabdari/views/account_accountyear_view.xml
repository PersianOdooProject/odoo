<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="leasing_hesabdari.account_accountyear_list">
            <field name="name">Account Account Year list</field>
            <field name="model">leasing_hesabdari.account_accountyear</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id" string="کد داخلی سال مالی" width="200pxl"/>
                    <field name="calendaryear_shamsiyear1" string="سال مالی" width="300pxl"/>
                    <field name="startdateshamsi" string="تاریخ شروع" width="300pxl"/>
                    <field name="enddateshamsi" string="تاریخ پایان" width="300pxl"/>
                    <field name="ssledger_code_name1" string="کد و عنوان حساب تفصل" width="300pxl"/>
                    <field name="accountyear_isactive" string="وضعیت سال مالی(فعال/غیرفعال)" width="300pxl"/>
                    <field name="create_uid" string="کاربر ایجاد کننده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت ایجاد" width="100pxl"/>
                    <field name="create_uid" string="کاربر تغییر دهنده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت تغییر" width="100pxl"/>
                </list>
            </field>
        </record>

        <record id="account_accountyear_form_view" model="ir.ui.view">
            <field name="name">Account Account Yar Form</field>
            <field name="model">leasing_hesabdari.account_accountyear</field>
            <field name="arch" type="xml">
                <form>
                    <sheet style="max-width : 50%;">
                        <group>
                            <field name="calendaryear_id" string="سال مالی"/>
                            <field name="startdateshamsi" string="تاریخ شروع"/>
                            <field name="enddateshamsi" string="تاریخ پایان"/>
                            <field name="ssledger_id" string="حساب تفصل"/>
                            <field name="accountyear_isactive" string="وضعیت سال مالی(فعال/غیرفعال)"/>
                            <field name="startdatemiladi" string="تاریخ شروع میلادی" invisible="True"/>
                            <field name="enddatemiladi" string="تاریخ پایان میلادی" invisible="True"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="leasing_hesabdari.account_accountyear_action_window">
            <field name="name">معرفی سال مالی</field>
            <field name="res_model">leasing_hesabdari.account_accountyear</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>

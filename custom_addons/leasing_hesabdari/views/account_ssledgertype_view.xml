<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="leasing_hesabdari.account_ssledgertype_list">
            <field name="name">Account Ssledgertype list</field>
            <field name="model">leasing_hesabdari.account_ssledgertype</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id" string="کد داخلی"/>
                    <field name="ssledgertype_code" width="50pxl"/>
                    <field name="ssledgertype_name" width="300pxl"/>
                    <field name="create_uid" string="کاربر ایجاد کننده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت ایجاد" width="100pxl"/>
                    <field name="create_uid" string="کاربر تغییر دهنده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت تغییر" width="100pxl"/>
                </list>
            </field>
        </record>

        <record id="account_ssledgertype_form_view" model="ir.ui.view">
            <field name="name">Account Ssledgertype Form</field>
            <field name="model">leasing_hesabdari.account_ssledgertype</field>
            <field name="arch" type="xml">
                <form>
                    <sheet style="max-width : 50%;">
                        <group>
                            <field name="ssledgertype_code" string="کد نوع حساب تفصیل"/>
                            <field name="ssledgertype_name" string="عنوان نوع حساب تفصیل"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="leasing_hesabdari.account_ssledgertype_action_window">
            <field name="name">نوع حساب تفصیل</field>
            <field name="res_model">leasing_hesabdari.account_ssledgertype</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="report_leasing_account_ssledgertype" model="ir.actions.report">
            <field name="name">گزارش انواع حساب تفصیل</field>
            <field name="model">leasing_hesabdari.account_ssledgertype</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">leasing_hesabdari.report_account_ssledgertype</field>
            <field name="report_file">leasing_hesabdari.report_account_ssledgertype</field>
            <field name="binding_model_id" ref="model_leasing_hesabdari_account_ssledgertype"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>

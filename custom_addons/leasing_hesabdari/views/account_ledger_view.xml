<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="leasing_hesabdari.account_ledger_search">
            <field name="name">Account Ledger Search</field>
            <field name="model">leasing_hesabdari.account_ledger</field>
            <field name="arch" type="xml">
                <search>
                    <filter name="group_by_acc_group_codename1" string="کد و عنوان گروه حساب"
                            context="{'group_by': 'acc_group_codename1'}"/>
                </search>
            </field>
        </record>

        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="leasing_hesabdari.account_ledger_list">
            <field name="name">Account Ledger list</field>
            <field name="model">leasing_hesabdari.account_ledger</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id" string="کد داخلی"/>
                    <field name="ledger" width="150pxl"/>
                    <field name="ledger_name" width="300pxl"/>
                    <field name="acc_group_codename1" string="کد و عنوان گروه حساب" width="300pxl"/>
                    <field name="acc_control_type_id" string="ماهیت حساب" width="100pxl"/>
                    <field name="ledger_isactive" string="وضعیت حساب(فعال/غیرفعال)" width="200pxl"/>
                    <field name="create_uid" string="کاربر ایجاد کننده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت ایجاد" width="100pxl"/>
                    <field name="create_uid" string="کاربر تغییر دهنده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت تغییر" width="100pxl"/>
                </list>
            </field>
        </record>

        <record id="account_ledger_form_view" model="ir.ui.view">
            <field name="name">Account Ledger Form</field>
            <field name="model">leasing_hesabdari.account_ledger</field>
            <field name="arch" type="xml">
                <form>
                    <sheet style="max-width : 50%;">
                        <group>
                            <field name="acc_group_id" string="گروه حساب"/>
                            <field name="ledger" string="کد حساب کل"/>
                            <field name="ledger_name" string="عنوان حساب کل"/>
                            <field name="acc_control_type_id" string="ماهیت حساب"
                                   options="{'no_create_edit' : True ,'no_create' : True}"/>
                            <field name="ledger_isactive" string="وضعیت حساب(فعال/غیرفعال)"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="leasing_hesabdari.account_ledger_action_window">
            <field name="name">حساب کل</field>
            <field name="res_model">leasing_hesabdari.account_ledger</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="report_leasing_account_ledger" model="ir.actions.report">
            <field name="name">گزارش حساب کل</field>
            <field name="model">leasing_hesabdari.account_ledger</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">leasing_hesabdari.report_account_ledger</field>
            <field name="report_file">leasing_hesabdari.report_account_ledger</field>
            <field name="binding_model_id" ref="model_leasing_hesabdari_account_ledger"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>

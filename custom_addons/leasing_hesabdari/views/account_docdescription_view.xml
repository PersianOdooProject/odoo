<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="leasing_hesabdari.account_docdescription_list">
            <field name="name">Account Docdescription list</field>
            <field name="model">leasing_hesabdari.account_docdescription</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id" string="کد داخلی"/>
                    <field name="docdes_code" width="50pxl"/>
                    <field name="docdes_text" width="300pxl"/>
                    <field name="create_uid" string="کاربر ایجاد کننده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت ایجاد" width="100pxl"/>
                    <field name="create_uid" string="کاربر تغییر دهنده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت تغییر" width="100pxl"/>
                </list>
            </field>
        </record>

        <record id="account_docdescription_form_view" model="ir.ui.view">
            <field name="name">Account Docdescription Form</field>
            <field name="model">leasing_hesabdari.account_docdescription</field>
            <field name="arch" type="xml">
                <form>
                    <sheet style="max-width : 50%;">
                        <group>
                            <field name="docdes_code" string="کد شرح تکراري در سند حسابداري"/>
                            <field name="docdes_text" string="متن شرح تکراري در سند حسابداري"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="leasing_hesabdari.account_docdescription_action_window">
            <field name="name">شرح تکراری در سند حسابداری</field>
            <field name="res_model">leasing_hesabdari.account_docdescription</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>

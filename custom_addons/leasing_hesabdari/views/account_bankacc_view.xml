<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="leasing_hesabdari.account_bankacc_list">
            <field name="name">Bankacc list</field>
            <field name="model">leasing_hesabdari.account_bankacc</field>
            <field name="arch" type="xml">
                <list>
                    <field name="id" string="کد داخلی"/>
                    <field name="bankacc_code" string="کد حساب بانک مرکزی" width="100pxl"/>
                    <field name="bankacc_name" string="عنوان حساب بانک مرکزی" width="300pxl"/>
                    <field name="bankaccgroup_id" string="عنوان گروه حساب بانک مرکزی" width="300pxl"/>
                    <field name="create_uid" string="کاربر ایجاد کننده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت ایجاد" width="100pxl"/>
                    <field name="create_uid" string="کاربر تغییر دهنده" width="100pxl"/>
                    <field name="create_date" string="تاریخ و ساعت تغییر" width="100pxl"/>
                </list>
            </field>
        </record>

        <record id="account_bankacc_form_view" model="ir.ui.view">
            <field name="name">Banacc Form</field>
            <field name="model">leasing_hesabdari.account_bankacc</field>
            <field name="arch" type="xml">
                <form>
                    <sheet style="max-width : 100%;">
                        <group>
                            <field name="bankacc_code" string="کد حساب بانک مرکزی"/>
                            <field name="bankacc_name" string="عنوان حساب بانک مرکزی"/>
                        </group>
                        <notebook>
                            <page string="تنظیم ارتباط حساب بانک مرکزی و حساب کل و معین">
                                <group>
                                    <field name="sledgerlink_id" string=" "/>
                                </group>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="leasing_hesabdari.account_bankacc_action_window">
            <field name="name">حساب بانک مرکزی</field>
            <field name="res_model">leasing_hesabdari.account_bankacc</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="report_leasing_hesabdari_account_bankacc" model="ir.actions.report">
            <field name="name">گزارش حساب های بانک مرکزی</field>
            <field name="model">leasing_hesabdari.account_bankacc</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">leasing_hesabdari.report_account_bankacc</field>
            <field name="report_file">leasing_hesabdari.report_account_bankacc</field>
            <field name="binding_model_id" ref="model_leasing_hesabdari_account_bankacc"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>
